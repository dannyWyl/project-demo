<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	

	<!--多个就配置多个-->
	<context:property-placeholder location="classpath:property/proJdbc.properties" ignore-unresolvable="true"/>
	<context:property-placeholder location="classpath:property/zookepeer.properties" ignore-unresolvable="true"/>
	<context:property-placeholder location="classpath:property/redis-config.properties" ignore-unresolvable="true"/>

	<!-- 配置应用系统的常量（多个逗号隔开）-->
	<bean name="constants" class="com.wyl.self.util.Constants">
		<constructor-arg value="property/proJdbc.properties" />
	</bean>
</beans>